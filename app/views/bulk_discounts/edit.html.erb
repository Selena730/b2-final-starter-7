<%= render partial: "shared/nav" %>

<h1> Edit Bulk Discount</h1>

<%= form_with model: [@merchant, @bulk_discount], local: true do |form| %>
<div>
    <%= form.label :percentage_discount, "Percentage Discount" %>
    <%= form.number_field :percentage_discount %>

    <%= form.label :quantity_threshold, "Quantity Threshold" %>
    <%= form.number_field :quantity_threshold %>

<%= form.submit "Update Discount" %>
</div>
<% end %>

<%= link_to 'Back to Bulk Discounts', merchant_bulk_discount_path(@merchant, @bulk_discount) %> 
